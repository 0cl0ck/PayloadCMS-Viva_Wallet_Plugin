{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "build",
    "tests",
    "node_modules",
    "**/*.test.ts"
  ]
}